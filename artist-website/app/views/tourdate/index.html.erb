<head>
	<link rel="stylesheet" type="text/css" href="../../assets/stylesheets/backend-style.css" >
</head>
<body>
	<h1>Edit Your Shows</h1>
	<div class="page-contents">
      <div class="new-entry">
	    <%= link_to "Create New Show", new_path %>
	  </div>
	  <div class="nav-button">
	  	<%= link_to 'Edit News Posts', post_path %>
	  </div>

		<div class="date-list">
			<table>
			<thead>
			  <tr>
			   <th>Date</th>
			   <th>City</th>
			   <th>Venue</th>
			   <th>Time</th>
			  </tr>
			</thead>
			<%@tourdates.each do |tourdate| %>
			   <tr>
			   <td><%= tourdate.date %></td>
			   <td><%= tourdate.city %></td>
			   <td><%= tourdate.venue %></td>
			   <td><%= tourdate.time %></td>
			   </tr>
			<% end %>
			</table>
		</div>
	</div>

</body>